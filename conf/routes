# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#User
GET	    /user:userId			    controllers.UserController.getUser(userId: String)
POST	/addlist					controllers.UserController.addList()
POST	/user/updateLocation		controllers.UserController.updateLocation()

#Agent
GET	    /agent:agentId			    controllers.StoreAssociateController.getAgent(agentId: String)
#POST	/verifylist				    controllers.StoreAssociateController.verifyList()
POST	/agent/updateLocation		controllers.StoreAssociateController.updateLocation()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


GET     /test                   	controllers.TestController.addToDb()
